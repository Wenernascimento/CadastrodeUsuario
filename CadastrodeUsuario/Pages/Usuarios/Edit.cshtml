@page
@model CadastrodeUsuario.Pages.Usuarios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.Id" />
            <div class="form-group">
                <label asp-for="Usuario.Name" class="control-label"></label>
                <input asp-for="Usuario.Name" class="form-control" />
                <span asp-validation-for="Usuario.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Email" class="control-label"></label>
                <input asp-for="Usuario.Email" class="form-control" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Phone" class="control-label"></label>
                <input asp-for="Usuario.Phone" class="form-control" />
                <span asp-validation-for="Usuario.Phone" class="text-danger"></span>
            </div>
           <br/> 
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
       
        </form>
   <br/>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
