@page
@model CadastrodeUsuario.Pages.Usuarios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Início</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-success">Criar Novo</a>
</p>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchTerm" class="form-control" placeholder="Digite o nome para buscar..." value="@Request.Query["searchTerm"]" />
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Name) 📝
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Email) 📨
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Phone) ☎️ 📱
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Usuario) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" button" class="btn btn-outline-success">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" button" class="btn btn-info">Atualizar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" button" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
